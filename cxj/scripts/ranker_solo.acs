function int tosecs(int tics)
{
	int seconds = tics / TICS_IN_SECOND;
	return seconds % SECONDS_IN_MINUTE;
}

function int tomins(int tics)
{
	int seconds = tics / TICS_IN_SECOND;
	return seconds / SECONDS_IN_MINUTE;
}

function int tocsecs(int tics)
{
	return cal_cseconds( tics % TICS_IN_SECOND );
}